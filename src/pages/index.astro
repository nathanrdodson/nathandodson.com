---
import Navigation from "../components/Navigation.astro"
import profile from '../assets/img/profile.webp'
import {Content as Welcome} from './index.md';
---
<style lang="scss">
	@use '../assets/css/_vars.scss' as *;
	html {
		margin: 0;
		
		background-color: $background;
		color: $on-background;
	}
	
	body {
		margin-top: $mobile-nav-height;

		@media screen and (min-width: 48em) {
			margin-top: 0;
			margin-left: $nav-offset; // use margin of navbar for all other page content
		}

		font-family: "indivisible", sans-serif;
		font-weight: 400;
		font-style: normal;

		font-size: 18px;
		line-height: 1.4em;
	}

	img {
		width: 200px;
	}

	.d-flex {
		display: flex;
	}

	.center {
		align-items: center;
		justify-content: center;
	}
	
	.border {
		border: 1px solid black;
	}
</style>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />

		<!-- Pure.css -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/base-min.css">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/grids-min.css">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/grids-responsive-min.css">

		<!-- font and icon imports -->
		<link rel="stylesheet" href="https://use.typekit.net/eyj8xkd.css">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/iconoir-icons/iconoir@main/css/iconoir.css"/>

		<title>N.D;</title>
	</head>
	<Navigation />
	<body>
		<div class="pure-g center">
			<div class="pure-u-1 pure-u-md-4-5 pure-u-lg-3-5 pure-u-xxl-1-2">
				<br>
				<br>
				<div class="d-flex center">
					<img src={profile.src} alt="Profile img">
				</div>
				<Welcome />
			</div>
		</div>
	</body>
</html>
